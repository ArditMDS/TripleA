<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TripleA.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TripleA"
    xmlns:views="clr-namespace:TripleA.Views"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Home">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="Joueurs">
        <ShellContent ContentTemplate="{DataTemplate views:PlayerPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Parties">
        <ShellContent ContentTemplate="{DataTemplate views:GamePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Statistiques">
        <ShellContent ContentTemplate="{DataTemplate views:StatisticsPage}" />
    </FlyoutItem>

</Shell>
